<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 自定义属性 -->
    <declare-styleable name="BorderStyle">
        <!-- 边框宽度 -->
        <attr name="layout_borderWidth" format="dimension"></attr>
        <!-- 边框颜色 -->
        <attr name="layout_borderColor" format="color" />
        <!-- 圆角半径 -->
        <attr name="cornerRadius" format="dimension"/>
    </declare-styleable>

</resources>